<h3>以下の内容で登録します</h3>
<%= form_with(model: @properti, local: true) do |form| %>
  <%= form.hidden_field :properties_name %>
  <%= form.hidden_field :rent %>
  <%= form.hidden_field :adress %>
  <%= form.hidden_field :age_of_building %>
  <%= form.hidden_field :note %>
  <p>物件名:<%= @properti.properties_name %></p>
  <p>賃料:<%= @properti.rent %>円</p>
  <p>住所:<%= @properti.adress %></p>
  <p>築年数:<%= @properti.age_of_building %>年</p>
  <p>備考:<%= @properti.note %></p>

    <%= form.fields_for :nearest_stations do |nearest_station| %>
    <h4>
      最寄り駅
      <%= nearest_station.index + 1 %>
    </h4>
    <%= nearest_station.label :"路線名" %><br>
    <%= nearest_station.text_field :route_name %><br>
    <%= nearest_station.label :"駅名" %><br>
    <%= nearest_station.text_field :satation_name %><br>
    <%= nearest_station.label :"徒歩分数" %><br>
    <%= nearest_station.text_field :walking_taime %>分<br>
  <% end %>

  <%= form.submit  "登録する" %>
  <%= form.submit "戻る" %>
<% end %>