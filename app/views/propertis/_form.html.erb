<%= form_with(model: @properti, local: true ,url: choose_new_or_edit ) do |form| %>
   <% if @properti.errors.any? %>
    <div id="error_explanation">
      <h2><%= @properti.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @properti.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= form.label :"物件名" %><br>
    <%= form.text_field :properties_name %><br>
    <%= form.label :"賃料" %><br>
    <%= form.text_field :rent %><br>
    <%= form.label :"住所" %><br>
    <%= form.text_field :adress %><br>
    <%= form.label :"築年数" %><br>
    <%= form.text_field :age_of_building %><br>
    <%= form.label :"備考" %><br>
    <%= form.text_field :note %><br>

  <hr>
  <h4>最寄駅</h4>
  <%= form.fields_for :nearest_stations do |nearest_station| %>
    <%= nearest_station.label :"路線名" %><br>
    <%= nearest_station.text_field :route_name %><br>
    <%= nearest_station.label :"駅名" %><br>
    <%= nearest_station.text_field :satation_name %><br>
    <%= nearest_station.label :"徒歩分数" %><br>
    <%= nearest_station.text_field :walking_taime %><br>
  <% end %>
  <%= form.submit '登録する' %>
  <%= form.submit "戻る" %>
<% end %>